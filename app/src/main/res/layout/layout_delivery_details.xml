<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:background="@drawable/bg_cr8_fill_f7f7f7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvARD_deliveryStage"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/bg_cr8_tl_bl_fill_f7f7f7"
        android:gravity="center"
        android:padding="8dp"
        android:text="Stage\n\n 3"
        android:textColor="@color/black4"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvARD_deliveryStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="On the way to Receive"
        android:textColor="@color/black0"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvARD_deliveryStage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvARD_pickupAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Pickup from:"
        android:textColor="@color/black4"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvARD_deliveryStatus"
        app:layout_constraintTop_toBottomOf="@+id/tvARD_deliveryStatus" />

    <TextView
        android:id="@+id/tvARD_deliveryAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Deliver to:"
        android:textColor="@color/black4"
        android:textSize="14dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvARD_pickupAddress"
        app:layout_constraintTop_toBottomOf="@+id/tvARD_pickupAddress"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>